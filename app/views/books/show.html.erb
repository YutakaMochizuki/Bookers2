<div>
  <%= flash[:notice] %>
</div>

<div class="container mt-3">
  <div class="row">
    <div class="col-md-3">
      <div>
        <h2>User info</h2>
        <%= image_tag(@book.user.get_profile_image(100,100)) %>
        <table class="table">
          <tbody>
            <tr>
              <td>
                <p>name</p>
              </td>
              <td>
                <%= @book.user.name %>
              </td>
            </tr>
            <tr>
              <td>
                <p>introduction</p>
              </td>
              <td>
                <%= @book.user.introduction %>
              </td>
            </tr>
          </tbody>
        </table>
        <%= link_to edit_user_path(@book.user.id), class: 'btn btn-outline-secondary btn-block' do  %>
          <i class="fas fa-user-cog" style="color: grey;"></i>
        <% end %>
        <div class="mt-3">
          <h2>New book</h2>
          <%= form_with model: @book_new do |f| %>
          <h6>Title</h6>
          <%= f.text_field :title, size: 28 %>
          <h6>Opinion</h6>
          <%= f.text_area :body, size: "27×27" %><br>
          <%= f.submit 'Create Book', class: "btn btn-success" %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-md-8 offset-md-1">
      <div>
        <div>
          <h2>Book detail</h2>
        </div>
        <div>
          <table class="table">
            <tbody>
              <tr>
                <td>
                  <%= link_to image_tag(@book.user.get_profile_image(100,100)), "/users/#{@book.user.id}" %><br>
                  <%= link_to @book.user.name, "/users/#{@book.user.id}" %>
                </td>
                <td>
                  <%= link_to @book.title, ""  %>
                </td>
                <td>
                  <%= @book.body %>
                </td>
                <% if @book.user == current_user %>
                  <td>
                    <%=link_to "Edit", edit_book_path(@book.id), class: 'btn btn-success' %>
                  </td>
                  <td>
                    <%=link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？",class: 'btn btn-danger' %>
                  </td>
                <% end %>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>