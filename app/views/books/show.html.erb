<div>
  <%= flash[:notice] %>
</div>

<div class="container mt-3">
  <div class="row">
    <div class="col-lg-4">
      <div>
        <h1>User info</h1>
        <%= image_tag current_user.get_profile_image(100,100) %>
        <table class="table">
          <tbody>
            <tr>
              <td>
                <p>name</p>
              </td>
              <td>
                <%= current_user.name %>
              </td>
            </tr>
            <tr>
              <td>
                <p>introduction</p>
              </td>
              <td>
                <%= current_user.introduction %>
              </td>
            </tr>
          </tbody>
        </table>
        <button class="btn btn-outline-secondary btn-block">
        <%= link_to edit_user_path(@book.user.id) do  %>
          <i class="fa fa-user-cog" style="color: grey;"></i>
        <% end %>
        </button>
        <div class="mt-3">
          <h1>New Book</h1>
          <%= form_with model: @book do |f| %>
          <h4>Title</h4>
          <%= f.text_field :title %>
          <h4>Opinion</h4>
          <%= f.text_area :body %><br>
          <%= f.submit 'Create Book', class: "btn btn-success" %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-lg-8">
      <div>
        <div>
          <h1>Books detail</h1>
        </div>
        <div>
          <table class="table">
            <tbody>
              <tr>
                <td>
                  <%= link_to image_tag(@book.user.get_profile_image(100,100)), "/users/#{@book.id}" %><br>
                  <%= link_to @book.user.name, "" %>
                </td>
                <td>
                  <%= link_to @book.title, ""  %>
                </td>
                <td>
                  <%= @book.body %>
                </td>
                <% if @book.user == current_user %>
                  <td>
                    <%=link_to "Edit", edit_book_path(@book.id), class: 'btn btn-success' %>
                  </td>
                  <td>
                    <%=link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？",class: 'btn btn-danger' %>
                  </td>
                <% end %>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>