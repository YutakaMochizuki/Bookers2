<div>
  <% if @book.errors.any? %>
  <h1><%= @book.errors.count %> errors prohibited this obj from being saved:</h1>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
<% end %>
</div>

<div class="container mt-3">
  <div class="row">
    <div class="col-lg-4">
      <div>
        <h1>User info</h1>
        <%= image_tag current_user.get_profile_image(100,100) %>
        <table class="table">
          <tbody>
            <tr>
              <td>
                <p>name</p>
              </td>
              <td>
                <%= current_user.name %>
              </td>
            </tr>
            <tr>
              <td>
                <p>introduction</p>
              </td>
              <td>
                <%= current_user.introduction %>
              </td>
            </tr>
          </tbody>
        </table>
        <button class="btn btn-outline-secondary btn-block">
          <%= link_to edit_user_path(@book.user.id) do %>
            <i class="fa fa-user-cog" style="color: grey;"></i>
          <% end %>
        </button>
      </div>
      <div class="mt-3">
        <h1>New Book</h1>
        <%= form_with model: @book do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
        <%= f.text_area :body %><br>
        <%= f.submit 'Create Book', class: "btn btn-success" %>
        <% end %>
      </div>
    </div>
    <div class="col-lg-8">
      <div>
        <div>
          <h1>Books</h1>
        </div>
        <div>
          <table class="table">
            <thead>
              <tr><th></th><th>Title</th><th>opinion</th></tr>
            </thead>
            <% @books.each do |book| %>
            <tbody>
              <tr>
                <td>
                  <%= image_tag book.user.get_profile_image(100,100) %>
                </td>
                <td>
                  <%= link_to book.title, "books/#{book.id}" %>
                </td>
                <td>
                  <%= book.body %>
                </td>
              </tr>
            </tbody>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>