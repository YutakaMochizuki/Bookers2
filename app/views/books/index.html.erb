<div class="container mt-3">
  <div class="row">
    <div class="ml-50">
      <% if @book.errors.any? %>
        <h2><%= @book.errors.count %> errors prohibited this obj from being saved:</h2>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
      <% end %>
    </div>
  </div>
</div>

<div class="container mt-3">
  <div class="row">
    <div class="col-md-3">
      <div>
        <h2>User info</h2>
        <%= image_tag current_user.get_profile_image(100,100) %>
        <table class="table">
          <tbody>
            <tr>
              <td>
                <p>name</p>
              </td>
              <td>
                <%= current_user.name %>
              </td>
            </tr>
            <tr>
              <td>
                <p>introduction</p>
              </td>
              <td>
                <%= current_user.introduction %>
              </td>
            </tr>
          </tbody>
        </table>
          <%= link_to edit_user_path(@book.user.id), class: 'btn btn-outline-secondary btn-block' do %>
            <i class="fas fa-user-cog" style="color: grey;"></i>
          <% end %>
      </div>
      <div class="mt-3">
        <h2>New book</h2>
        <%= form_with model: @book_post do |f| %>
        <h6>Title</h6>
        <%= f.text_field :title, size: 28 %>
        <h6>Opinion</h6>
        <%= f.text_area :body, size: "27Ã—27" %><br>
        <%= f.submit 'Create Book', class: "btn btn-success" %>
        <% end %>
      </div>
    </div>
    <div class="col-md-8 offset-md-1">
      <div>
        <div>
          <h2>Books</h2>
        </div>
        <div>
          <table class="table">
            <thead>
              <tr><th></th><th>Title</th><th>opinion</th></tr>
            </thead>
            <% @books.each do |book| %>
            <tbody>
              <tr>
                <td>
                  <%= link_to image_tag(book.user.get_profile_image(100,100)), "/users/#{book.user.id}" %>
                </td>
                <td>
                  <%= link_to book.title, book_path(book) %>
                </td>
                <td>
                  <%= book.body %>
                </td>
              </tr>
            </tbody>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>