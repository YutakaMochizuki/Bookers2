<h1>Editing Book</h1>
<div>
<%= form_with model: @book do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>
  <p>Opinion</p>
  <%= f.text_area :body %>
  <%= f.submit 'Update Book' %>
<% end %>
</div>
<div>
  <%= link_to "Show", "/books/#{@book.id}" %>
  <p>|</p>
  <%= link_to "Back", "/books" %>
</div>