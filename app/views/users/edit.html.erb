<div class="col-6 mx-auto mt-3">
  <h1>User info</h1>

  <% if @user.errors.any? %>
    <h1><%= @user.errors.count %> errors prohibited this obj from being saved:</h1>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <%= form_with model: @user do |f| %>
    <label for="inputName">name</label><br>
    <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:""%><br>
    <label for="inputImage" class="mt-3">Image</label><br>
    <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %><br>
    <label for="inputIntroduction" class="mt-3">Introduction</label><br>
    <%= f.text_area :introduction, id:"inputIntroduction", placeholder:"" %><br>
    <%= f.submit "Update User", class: "btn btn-secondary" %>
  <% end %>
</div>