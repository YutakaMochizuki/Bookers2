<div class="col-5 mx-auto mt-3">
  <h2>User info</h2>
  <div>
    <% if @user.errors.any? %>
      <h2><%= @user.errors.count %> errors prohibited this obj from being saved:</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
  <%= form_with model: @user do |f| %>
    <label for="inputName">Name</label><br>
    <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"", size: 55 %><br>
    <label for="inputImage" class="mt-3">Image</label><br>
    <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %><br>
    <label for="inputIntroduction" class="mt-3">Introduction</label><br>
    <%= f.text_area :introduction, id:"inputIntroduction", placeholder:"", size: "54×54" %><br>
    <%= f.submit "Update User", class: "btn btn-secondary" %>
  <% end %>
</div>