<div class="container mt-3">
  <div class="row">
    <div class="col-md-3">
      <div>
        <h2>User info</h2>
        <%= image_tag current_user.get_profile_image(100,100) %>
        <table class="table">
          <tbody>
            <tr>
              <td>
                <p>name</p>
              </td>
              <td>
                <%= current_user.name %>
              </td>
            </tr>
            <tr>
              <td>
                <p>introduction</p>
              </td>
              <td>
                <%= current_user.introduction %>
              </td>
            </tr>
          </tbody>
        </table>
          <%= link_to "/users/#{current_user.id}/edit", class: 'btn btn-outline-secondary btn-block' do %>
            <i class="fas fa-user-cog" style="color: grey;"></i>
          <% end %>
      </div>
      <div class="mt-3">
        <h2>New book</h2>
        <%= form_with model: @book, url: {controller: 'books', action: 'index'} do |f| %>
        <h6>Title</h6>
        <%= f.text_field :title, size: 28 %>
        <h6>Opinion</h6>
        <%= f.text_area :body, size: "27Ã—27" %><br>
        <%= f.submit 'Create Book', class: "btn btn-success" %>
        <% end %>
      </div>
    </div>
    <div class="col-md-8 offset-md-1">
      <div>
        <h2>Users</h2>
        <table class="table">
          <thead>
            <tr><th>image</th><th>name</th><th></th></tr>
          </thead>
          <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
                <%= image_tag user.get_profile_image(100,100) %>
              </td>
              <td>
                <%= user.name %>
              </td>
              <td>
                <%= link_to "Show", "/users/#{user.id}" %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>