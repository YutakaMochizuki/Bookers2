<div class="container mt-3">
  <div class="row">
    <div class="col-lg-4">
      <div>
        <h1>User info</h1>
        <%= image_tag current_user.get_profile_image(100,100) %>
        <table class="table">
          <tbody>
            <tr>
              <td>
                <p>name</p>
              </td>
              <td>
                <%= current_user.name %>
              </td>
            </tr>
            <tr>
              <td>
                <p>introduction</p>
              </td>
              <td>
                <%= current_user.introduction %>
              </td>
            </tr>
          </tbody>
        </table>
        <button class="btn btn-outline-secondary btn-block">
          <%= link_to "/users/#{current_user.id}" do %>
            <i class="fa fa-user-cog" style="color: grey;"></i>
          <% end %>
        </button>
      </div>
      <div class="mt-3">
        <h1>New Book</h1>
        <%= form_with model: @book do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
        <%= f.text_area :body %><br>
        <%= f.submit 'Create Book', class: "btn btn-success" %>
        <% end %>
      </div>
    </div>
    <div class="col-lg-8">
      <div>
        <h1>Users</h1>
        <table class="table">
          <thead>
            <tr><th>Image</th><th>name</th><th></th></tr>
          </thead>
          <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
                <%= image_tag user.get_profile_image(100,100) %>
              </td>
              <td>
                <%= user.name %>
              </td>
              <td>
                <%= link_to "Show", "/users/#{user.id}" %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>